{
    "name": "yiisoft/i18n",
    "type": "library",
    "description": "Yii i18n",
    "keywords": [
        "i18n",
        "translation",
        "internationalization",
        "formatting"
    ],
    "homepage": "http://www.yiiframework.com/",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yiisoft/i18n/issues?state=open",
        "forum": "http://www.yiiframework.com/forum/",
        "wiki": "http://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii",
        "source": "https://github.com/yiisoft/i18n"
    },
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3",
        "phan/phan": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "Yiisoft\\I18n\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yiisoft\\I18n\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": [
            "phpunit --colors --no-interaction"
        ]
    }
}
